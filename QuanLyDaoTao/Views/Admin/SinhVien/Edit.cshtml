@model QuanLyDaoTaoWeb.Models.SinhVien

@{
    ViewData["Title"] = "Sửa Sinh Viên";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Sửa Sinh Viên</h5>
        </div>
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }
            <form asp-action="EditSinhVien" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSV" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaSV" class="form-label"></label>
                        <input asp-for="MaSV" class="form-control" readonly />
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="HoTen" class="form-label"></label>
                        <input asp-for="HoTen" class="form-control" maxlength="100" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="NgaySinh" class="form-label"></label>
                        <input asp-for="NgaySinh" class="form-control" type="date" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" type="email" maxlength="50" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaKhoa" class="form-label"></label>
                        <select asp-for="MaKhoa" asp-items="ViewBag.KhoaList" class="form-select" required>
                            <option value="">-- Chọn Khoa --</option>
                        </select>
                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-action="SinhVienIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}