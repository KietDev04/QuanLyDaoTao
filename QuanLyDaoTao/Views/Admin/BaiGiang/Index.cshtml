@model IEnumerable<QuanLyDaoTaoWeb.Models.BaiGiang>

@{
    ViewData["Title"] = "Quản Lý Bài Giảng";
}

<div class="container-fluid py-4">
    <a asp-action="IndexAdmin" class="btn btn-info">
                <i class="fas fa-plus"></i> Quay lại
            </a>
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Danh Sách Bài Giảng</h5>
            <a asp-action="CreateBaiGiang" class="btn btn-light">
                <i class="fas fa-plus"></i> Thêm mới
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.MaBG)</th>
                            <th>@Html.DisplayNameFor(m => m.TieuDe)</th>
                            <th>@Html.DisplayNameFor(m => m.MonHoc.TenMH)</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.MaBG)</td>
                                <td>@Html.DisplayFor(m => item.TieuDe)</td>
                                <td>@Html.DisplayFor(m => item.MonHoc.TenMH)</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditBaiGiang" asp-route-id="@item.MaBG" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                        <a asp-action="DeleteBaiGiang" asp-route-id="@item.MaBG" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}