@model QuanLyDaoTaoWeb.Models.BaiGiang

@{
    ViewData["Title"] = "Chỉnh Sửa Bài Giảng";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Chỉnh Sửa Bài Giảng</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditBaiGiang" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaBG" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaMH" class="form-label"></label>
                        <select asp-for="MaMH" asp-items="ViewBag.MonHocList" class="form-select">
                            <option value="">-- Chọn Môn Học --</option>
                        </select>
                        <span asp-validation-for="MaMH" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TieuDe" class="form-label"></label>
                    <input asp-for="TieuDe" class="form-control" />
                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NoiDung" class="form-label"></label>
                    <textarea asp-for="NoiDung" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="NoiDung" class="text-danger"></span>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-action="BaiGiangIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}