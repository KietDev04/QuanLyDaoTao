@model QuanLyDaoTaoWeb.Models.Khoa

@{
    ViewData["Title"] = "Thêm Khoa";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thêm Mới Khoa</h5>
        </div>
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="CreateKhoa" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaKhoa" class="form-label">Mã khoa <span class="text-danger">*</span></label>
                        <input asp-for="MaKhoa" class="form-control" required />
                        <span asp-validation-for="MaKhoa" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TenKhoa" class="form-label">Tên khoa <span class="text-danger">*</span></label>
                        <input asp-for="TenKhoa" class="form-control" required />
                        <span asp-validation-for="TenKhoa" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DienThoai" class="form-label">Điện thoại</label>
                        <input asp-for="DienThoai" class="form-control" type="tel" pattern="[0-9]{10}" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu
                    </button>
                    <a asp-action="KhoaIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}