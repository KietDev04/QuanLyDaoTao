@model QuanLyDaoTaoWeb.Models.Khoa

@{
    ViewData["Title"] = "Chỉnh Sửa Khoa";
}

<div class="container-fluid py-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0">Chỉnh Sửa Thông Tin Khoa</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditKhoa" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaKhoa" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TenKhoa" class="form-label"></label>
                        <input asp-for="TenKhoa" class="form-control" />
                        <span asp-validation-for="TenKhoa" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DiaChi" class="form-label"></label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DienThoai" class="form-label"></label>
                        <input asp-for="DienThoai" class="form-control" type="tel" pattern="[0-9]{10}" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-action="KhoaIndex" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}