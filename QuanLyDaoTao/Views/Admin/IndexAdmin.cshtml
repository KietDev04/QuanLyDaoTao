                        </div>
                    </div>
                </div>
                <!-- Các card khác tương tự -->
            </div>

            <div class="mt-4">
                <a asp-action="ApproveGiangVien" class="btn btn-outline-primary">
                    <i class="fas fa-user-check"></i> Phê duyệt tài khoản Giảng viên
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .card:hover {
            transform: translateY(-5px);
        }
    </style>
}