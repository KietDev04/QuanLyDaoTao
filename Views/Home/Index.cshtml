@model List<QuanLyDaoTao.Models.Khoa>

<h2>Danh sách khóa học</h2>
@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <a href="/Khoas/Create" class="btn btn-success">Thêm khóa học</a>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>Không có khóa học nào.</p>
}
else
{
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên khóa học</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var khoa in Model)
            {
                <tr>
                    <td>@khoa.Id</td>
                    <td>@khoa.TenKhoa</td>
                </tr>
            }
        </tbody>
    </table>
}
