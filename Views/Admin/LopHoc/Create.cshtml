@model QuanLyDaoTaoWeb.Models.LopHoc

@{
    ViewData["Title"] = "Thêm mới Lớp học";
}

<h1>Thêm mới Lớp học</h1>

<form asp-action="CreateLopHoc" method="post">
    <div class="form-group">
        <label asp-for="MaLop" class="control-label"></label>
        <input asp-for="MaLop" class="form-control" />
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenLop" class="control-label"></label>
        <input asp-for="TenLop" class="form-control" />
        <span asp-validation-for="TenLop" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaCTDT" class="control-label"></label>
        <input asp-for="MaCTDT" class="form-control" />
        <span asp-validation-for="MaCTDT" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a asp-action="LopHocIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}