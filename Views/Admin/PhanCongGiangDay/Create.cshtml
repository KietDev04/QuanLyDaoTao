@model QuanLyDaoTaoWeb.Models.PhanCongGiangDay

@{
    ViewData["Title"] = "Thêm mới Phân công Giảng dạy";
}

<h1>Thêm mới Phân công Giảng dạy</h1>

<form asp-action="CreatePhanCongGiangDay" method="post">
    <div class="form-group">
        <label asp-for="MaPCGD" class="control-label"></label>
        <input asp-for="MaPCGD" class="form-control" />
        <span asp-validation-for="MaPCGD" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaGV" class="control-label"></label>
        <input asp-for="MaGV" class="form-control" />
        <span asp-validation-for="MaGV" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaMH" class="control-label"></label>
        <input asp-for="MaMH" class="form-control" />
        <span asp-validation-for="MaMH" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaLop" class="control-label"></label>
        <input asp-for="MaLop" class="form-control" />
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HocKy" class="control-label"></label>
        <input asp-for="HocKy" class="form-control" type="number" min="1" max="3" />
        <span asp-validation-for="HocKy" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NamHoc" class="control-label"></label>
        <input asp-for="NamHoc" class="form-control" type="number" min="2000" max="2026" />
        <span asp-validation-for="NamHoc" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Thêm" class="btn btn-primary" />
        <a asp-action="PhanCongGiangDayIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}