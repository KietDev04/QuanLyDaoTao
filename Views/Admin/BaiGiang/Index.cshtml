@model IEnumerable<QuanLyDaoTaoWeb.Models.BaiGiang>

<h2>Danh sách Bài giảng</h2>

<p>
    <a asp-action="CreateBaiGiang" class="btn btn-primary">Thêm Bài giảng mới</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>MaBG</th>
            <th>MaMH</th>
            <th>TieuDe</th>
            <th>NoiDung</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaBG</td>
                <td>@item.MaMH</td>
                <td>@item.TieuDe</td>
                <td>@item.NoiDung</td>
                <td>
                    <a asp-action="EditBaiGiang" asp-route-id="@item.MaBG" class="btn btn-warning">Sửa</a>
                    <a asp-action="DeleteBaiGiang" asp-route-id="@item.MaBG" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>