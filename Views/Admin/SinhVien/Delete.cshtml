@model QuanLyDaoTaoWeb.Models.SinhVien

@{
    ViewData["Title"] = "Xóa Sinh viên";
}

<h1>Xóa Sinh viên</h1>

<h3>Bạn có chắc chắn muốn xóa sinh viên này không?</h3>
<div>
    <h4>Thông tin Sinh viên</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaSV)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSV)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaKhoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaKhoa)
        </dd>
    </dl>

    <form asp-action="DeleteSinhVien" method="post">
        <input type="hidden" asp-for="MaSV" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="SinhVienIndex" class="btn btn-secondary">Quay lại</a>
    </form>
</div>