@model QuanLyDaoTaoWeb.Models.MonHoc

@{
    ViewData["Title"] = "Xóa Môn học";
}

<h1>Xóa Môn học</h1>

<h3>Bạn có chắc chắn muốn xóa môn học này không?</h3>
<div>
    <h4>Thông tin Môn học</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaMH)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaMH)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenMH)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenMH)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoTinChi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoTinChi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaKhoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaKhoa)
        </dd>
    </dl>

    <form asp-action="DeleteMonHoc" method="post">
        <input type="hidden" asp-for="MaMH" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="MonHocIndex" class="btn btn-secondary">Quay lại</a>
    </form>
</div>