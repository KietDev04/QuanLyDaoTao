@model QuanLyDaoTaoWeb.Models.MonHoc

@{
    ViewData["Title"] = "Chỉnh sửa Môn học";
}

<h1>Chỉnh sửa Môn học</h1>

<form asp-action="EditMonHoc" method="post">
    <div class="form-group">
        <label asp-for="MaMH" class="control-label"></label>
        <input asp-for="MaMH" class="form-control" readonly="readonly" />
        <span asp-validation-for="MaMH" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenMH" class="control-label"></label>
        <input asp-for="TenMH" class="form-control" />
        <span asp-validation-for="TenMH" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SoTinChi" class="control-label"></label>
        <input asp-for="SoTinChi" class="form-control" type="number" min="1" max="6" />
        <span asp-validation-for="SoTinChi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaKhoa" class="control-label"></label>
        <input asp-for="MaKhoa" class="form-control" />
        <span asp-validation-for="MaKhoa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="MonHocIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}