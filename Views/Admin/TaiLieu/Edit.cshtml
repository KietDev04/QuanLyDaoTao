@model QuanLyDaoTaoWeb.Models.TaiLieu

@{
    ViewData["Title"] = "Chỉnh sửa Tài liệu";
}

<h1>Chỉnh sửa Tài liệu</h1>

<form asp-action="EditTaiLieu" method="post">
    <div class="form-group">
        <label asp-for="MaTL" class="control-label"></label>
        <input asp-for="MaTL" class="form-control" readonly="readonly" />
        <span asp-validation-for="MaTL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaBG" class="control-label"></label>
        <input asp-for="MaBG" class="form-control" />
        <span asp-validation-for="MaBG" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TenTL" class="control-label"></label>
        <input asp-for="TenTL" class="form-control" />
        <span asp-validation-for="TenTL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DuongDan" class="control-label"></label>
        <input asp-for="DuongDan" class="form-control" placeholder="/files/..." />
        <span asp-validation-for="DuongDan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="TaiLieuIndex" class="btn btn-secondary">Quay lại</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}