@model List<QuanLyDaoTao.Models.BaiGiang>

<h2>Danh sách bài giảng</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">Thêm bài giảng</a>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>Không có bài giảng nào.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên bài giảng</th>
                <th>Đề cương</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var baiGiang in Model)
            {
                <tr>
                    <td>@baiGiang.Id</td>
                    <td>@baiGiang.TenBaiGiang</td>
                    <td>@baiGiang.DeCuong.TenDeCuong</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@baiGiang.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@baiGiang.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@baiGiang.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}