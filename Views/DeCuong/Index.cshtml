@model List<QuanLyDaoTao.Models.DeCuong>

<h2>Danh sách đề cương</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-success">Thêm đề cương</a>
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>Không có đề cương nào.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên đề cương</th>
                <th>Khóa học</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deCuong in Model)
            {
                <tr>
                    <td>@deCuong.Id</td>
                    <td>@deCuong.TenDeCuong</td>
                    <td>@deCuong.Khoa.TenKhoa</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@deCuong.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@deCuong.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@deCuong.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}