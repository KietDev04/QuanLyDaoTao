@model QuanLyDaoTao.Models.DeCuong

<h2>Xóa đề cương</h2>

<h3>Bạn có chắc chắn muốn xóa đề cương này?</h3>
<div>
    <h4>@Model.TenDeCuong</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Tên đề cương</dt>
        <dd class="col-sm-10">@Model.TenDeCuong</dd>
        <dt class="col-sm-2">Khóa học</dt>
        <dd class="col-sm-10">@(Model.Khoa?.TenKhoa ?? "Không xác định")</dd>
    </dl>
    
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Khoas" class="btn btn-secondary">Quay lại</a>
    </form>
</div>