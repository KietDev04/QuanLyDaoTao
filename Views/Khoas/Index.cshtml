@model List<QuanLyDaoTao.Models.Khoa>

<h2>Danh sách khóa học</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <a asp-action="Create" asp-controller="Khoas" class="btn btn-success">Thêm khóa học</a>
      
    </div>
}

@if (Model == null || !Model.Any())
{
    <p>Không có khóa học nào.</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tên khóa học</th>
                <th>Mô tả</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var khoa in Model)
            {
                <tr>
                    <td>@khoa.Id</td>
                    <td>@khoa.TenKhoa</td>
                    <td>@khoa.MoTa</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@khoa.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a asp-action="Details" asp-route-id="@khoa.Id" class="btn btn-info btn-sm">Chi tiết</a>
                        <a asp-action="Delete" asp-route-id="@khoa.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}