@model List<QuanLyDaoTao.Models.Khoa>

<div class="mb-4">
    <h2>Khóa học của tôi</h2>
    <div class="d-flex justify-content-between">
        <div>
            <button class="btn btn-outline-secondary">Đang học</button>
            <button class="btn btn-outline-secondary">Xóa tiêu chí lọc</button>
        </div>
        <button class="btn btn-outline-primary">Tình chỉnh</button>
    </div>
</div>

@foreach (var khoa in Model)
{
    <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title">@khoa.TenKhoa</h5>
                <p class="card-text">@khoa.MoTa</p>
            </div>
            <a href="/Khoas/Details/@khoa.Id" class="btn btn-primary">Bắt đầu khóa học</a>
        </div>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <div class="mt-3">
        <a href="/Khoas/Create" class="btn btn-success">Thêm khóa học</a>
    </div>
}