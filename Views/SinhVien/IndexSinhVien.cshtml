@model dynamic

@{
    ViewData["Title"] = "Trang Quản Lý Sinh Viên";
}

<div class="container">
    <h2>Trang Quản Lý Sinh Viên</h2>
    <p>Chào mừng Sinh Viên! Chọn mục quản lý bên dưới:</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Bài Giảng</h5>
                    <p class="card-text">Xem và quản lý danh sách bài giảng.</p>
                    <a asp-action="BaiGiangIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Bài Giảng</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Đăng Ký Lớp Học</h5>
                    <p class="card-text">Xem và quản lý đăng ký lớp học.</p>
                    <a asp-action="DangKyLopHocIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Đăng Ký Lớp Học</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Đánh Giá</h5>
                    <p class="card-text">Xem và quản lý danh sách đánh giá.</p>
                    <a asp-action="DanhGiaIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Đánh Giá</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Đề Cương</h5>
                    <p class="card-text">Xem và quản lý danh sách đề cương.</p>
                    <a asp-action="DeCuongIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Đề Cương</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Giảng Viên</h5>
                    <p class="card-text">Xem và quản lý danh sách giảng viên.</p>
                    <a asp-action="GiangVienIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Giảng Viên</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Khoa</h5>
                    <p class="card-text">Xem và quản lý danh sách khoa.</p>
                    <a asp-action="KhoaIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Khoa</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Lớp Học</h5>
                    <p class="card-text">Xem và quản lý danh sách lớp học.</p>
                    <a asp-action="LopHocIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Lớp Học</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Môn Học</h5>
                    <p class="card-text">Xem và quản lý danh sách môn học.</p>
                    <a asp-action="MonHocIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Môn Học</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Quản Lý Tài Liệu</h5>
                    <p class="card-text">Xem và quản lý danh sách tài liệu.</p>
                    <a asp-action="TaiLieuIndex" asp-controller="SinhVien" class="btn btn-primary">Xem Tài Liệu</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
    </style>
}